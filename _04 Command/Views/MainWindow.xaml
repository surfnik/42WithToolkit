<Window x:Class="_04_Command.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModels="clr-namespace:_04_Command.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:_04_Command.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="400"
        Height="450"
        FontSize="16"
        mc:Ignorable="d">
    <Window.DataContext>
        <ViewModels:MainWindowViewModel />
    </Window.DataContext>
    <StackPanel Width="200"
                Margin="0 10 0 0"
                HorizontalAlignment="Center">
        <TextBox Height="35"
                 VerticalAlignment="Top"
                 BorderBrush="Black"
                 BorderThickness="1"
                 Text="{Binding Firstname}" />
        <TextBox Height="35"
                 VerticalAlignment="Top"
                 BorderBrush="Black"
                 BorderThickness="1"
                 Text="{Binding Lastname}" />
        <TextBlock Text="{Binding Fullname, Mode=OneWay}" TextWrapping="Wrap" />
        <Button Margin="0 5 0 5"
                Command="{Binding ClearCommand}"
                Content="Clear" />

    </StackPanel>
</Window>
